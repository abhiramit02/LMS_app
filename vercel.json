{
  "version": 2,
  "builds": [
    {
      "src": "api/minimal.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "50mb",
        "memory": 3008,
        "maxDuration": 10,
        "includeFiles": ["templates/**/*", "templates/static/**/*"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/minimal.py" }
  ]
}